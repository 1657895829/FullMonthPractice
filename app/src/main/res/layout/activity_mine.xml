<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/top"
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:layout_height="0dp">
            <LinearLayout
                android:paddingBottom="0dp"
                android:layout_marginLeft="370dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="18dp"
                    android:id="@+id/setting"
                    android:src="@drawable/a9z"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <ImageView
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/a9w"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/wodetouxiang_shape"
                    fresco:backgroundImage="@drawable/default_head"
                    android:id="@+id/wode_touxiang"
                    fresco:roundAsCircle="true"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="18631090582"
                        android:textSize="17sp"
                        android:id="@+id/denglu"
                        android:layout_marginLeft="10dp"
                        android:textColor="#F8F8F8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text=""
                        android:textSize="17sp"
                        android:id="@+id/zhuce"
                        android:textColor="#F8F8F8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textStyle="bold"
                        android:padding="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/red_long"
                        android:layout_marginLeft="18dp"
                        android:textSize="12sp"
                        android:textColor="#F8F8F8"
                        android:text="新用户注册即送¥188礼包"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:src="@drawable/datu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>